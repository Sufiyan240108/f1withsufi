{
  "name": "f1withsufi-desktop",
  "version": "1.0.0",
  "description": "F1 Management Tool Standalone Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.sufiyan.f1withsufi",
    "win": {
      "target": "portable",
      "icon": "../hero_image.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "../frontend/dist/**/*",
      "resources/backend/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
